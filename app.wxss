.container{
    padding: 0 30rpx;
}
.fl {
    float: left;
}

.fr {
    float: right;
}

.clearfix:before, .clearfix:after {
    display: table;
    content: "";
}

.clearfix:after {
    clear: both;
}

.pass {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.pass2 {
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    align-content: center;
}

.pass3 {
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    align-content: center;
}

.pass4 {
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    align-content: center;
}

button::after {
    border: none;
}

.iconfont{
  width: 40rpx;
  height: 40rpx;
}

/* 地区选择 && 搜索框 */

.search-box {
    height: 60rpx;
    padding: 20rpx 30rpx;
}

.search-box image {
    width: 35rpx;
    height: 35rpx;
    display: inline-block;
    vertical-align: middle;
}

.search-box text {
    font-size: 24rpx;
    line-height: 60rpx;
    display: inline-block;
    vertical-align: middle;
}

.search-box>view {
}

.search-box view.fr {
    width: 500rpx;
    height: 60rpx;
    background-color: rgba(245, 245, 245, 1);
    border-radius: 10rpx;
    position: relative;
}

.search-box view.fr image {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: 20rpx;
    top: 50%;
    margin-top: -15rpx;
}

.search-box view.fr text {
    color: #515151;
    line-height: 60rpx;
    text-indent: 60rpx;
    width: 100%;
}
scroll-view {
    height: 80rpx;
    line-height: 80rpx;
}

scroll-view view {
    margin-right: 20rpx;
    font-size: 33rpx;
    display: inline-block;
    color: #bebebe;
}

scroll-view view:first-child {
    margin-left: 30rpx;
}

scroll-view view.active {
    font-size: 40rpx;
    color: #333;
    font-weight: bold;
}
.top-box {
	width: 100%;
	height: 180rpx;
	position: fixed;
	left: 0;
	top: 0;
	background-color: #fff;
	z-index: 3;
}

.ttt {
	width: 100%;
	height: 180rpx;
	margin-bottom: 20rpx;
}
