/* 地区选择 && 搜索框 */

.search-box {
    height: 100rpx;
    padding: 20rpx 30rpx 0;
}

.search-box image {
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
    vertical-align: middle;
}

.search-box text {
    font-size: 28rpx;
    line-height: 80rpx;
    display: inline-block;
    vertical-align: middle;
}

.search-box>view {
}

.search-box view.fr {
    width: 500rpx;
    height: 80rpx;
    background-color: rgba(245, 245, 245, 1);
    border-radius: 10rpx;
    position: relative;
}

.search-box view.fr image {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    left: 20rpx;
    top: 50%;
    margin-top: -20rpx;
}

.search-box view.fr text {
    color: #515151;
    line-height: 80rpx;
    text-indent: 80rpx;
    width: 100%;
}