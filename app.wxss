.container {
    padding: 0 30rpx;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.clearfix:before,
.clearfix:after {
    display: table;
    content: "";
}

.clearfix:after {
    clear: both;
}

.pass {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.pass2 {
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    align-content: center;
}

.pass3 {
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    align-content: center;
}

.pass4 {
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    align-content: center;
}

button::after {
    border: none;
}

.iconfont {
    width: 40rpx;
    height: 40rpx;
}

/* 地区选择 && 搜索框 */

.search-box {
    height: 60rpx;
    padding: 20rpx 30rpx;
}

.search-box image {
    width: 35rpx;
    height: 35rpx;
    display: inline-block;
    vertical-align: middle;
}

.search-box text {
    font-size: 24rpx;
    line-height: 60rpx;
    display: inline-block;
    vertical-align: middle;
}


.search-box view.fr {
    width: 500rpx;
    height: 60rpx;
    background-color: rgba(245, 245, 245, 1);
    border-radius: 10rpx;
    position: relative;
}

.search-box view.fr image {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: 20rpx;
    top: 50%;
    margin-top: -15rpx;
}

.search-box view.fr text {
    color: #515151;
    line-height: 60rpx;
    text-indent: 60rpx;
    width: 100%;
}

scroll-view.headscroll {
    height: 80rpx;
    line-height: 80rpx;
}

scroll-view.headscroll view {
    margin-right: 20rpx;
    font-size: 33rpx;
    display: inline-block;
    color: #bebebe;
}

scroll-view.headscroll view:first-child {
    margin-left: 30rpx;
}

scroll-view.headscroll view.active {
    font-size: 40rpx;
    color: #333;
    font-weight: bold;
}

.top-box {
    width: 100%;
    height: 180rpx;
    position: fixed;
    left: 0;
    top: 0;
    background-color: #fff;
    z-index: 3;
}

.ttt {
    height: 200rpx;
}

/* 产品 */


.product-box {
    overflow: hidden;
    background-color: #fff;
    padding: 30rpx 30rpx 0;
    border-bottom: 15rpx solid rgba(245, 245, 245, 1);

}

.product-imgbox>image {
    width: 270rpx;
    height: 166rpx;
    display: block;
    border-radius: 4rpx;
}

.product-box .product-contentbox {
    padding-left: 20rpx;
    width: 400rpx;
}

.product-box>view .title {
    width: 100%;
    font-size: 28rpx;
    height: 42px;
    margin-bottom: 10rpx;
    box-sizing: border-box;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.pro {
    margin-top: 190rpx;
    background-color: rgba(245, 245, 245, 1);
}


.product-box .diqu image {
    width: 30rpx;
    height: 30rpx;
    display: inline-block;
    vertical-align: middle;
    margin-right: 6px;

}

.product-box .product-imgbox {
    position: relative;
}

.product-box .product-imgbox .flag {
    position: absolute;
    left: 0;
    top: 0;
    background: #87CEFA;
    color: #fff;
    border-radius: 4rpx 9rpx 9rpx 0;
    padding: 3rpx 10rpx 3rpx;
    font-size: 20rpx;
}

.product-box .diqu text {
    font-size: 24rpx;
    color: #6D7278;
}

.product-box .label {
    width: 100%;
    border-top: 1px solid #f1f1f1;
    margin: 30rpx 0 20rpx;
    padding-top: 20rpx;
}

.product-box .label text {
    display: inline-block;
    height: 40rpx;
    line-height: 40rpx;
    border: 2rpx solid #87CEFA;
    font-size: 26rpx;
    color: #87CEFA;
    padding: 0 10rpx;
    border-radius: 5rpx;
    margin-right: 10rpx;
    margin-top: 10rpx;
}

.theme-color,
.theme-color text {
    color: #87CEFA !important;
}

.organize_footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    text-align: center;
    background-color: white;
}

.organize_footer .footer_button {
    height: 100rpx;
}

.organize_footer .footer_button image {
    width: 50rpx;
    height: 50rpx;
    padding: 26rpx;
}


.emptybox {
    text-align: center;
    font-size: 36rpx;
    color: #eee;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    flex-direction: column;
}

.emptyimg {
    color: #333;
    width: 200rpx;
    height: 200rpx;
}