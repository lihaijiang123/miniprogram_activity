.top-box {
	width: 100%;
	height: 180rpx;
	background-color: #fff;
	position: fixed;
	left: 0;
	top: 0;
	z-index: 3;
}

.ttt {
	width: 100%;
	height: 180rpx;
	margin-bottom: 20rpx;
}

/* 筛选 */

scroll-view {
    height: 100rpx;
    line-height: 100rpx;
	position: relative;
	z-index: 3;
	background-color: #fff;
}

scroll-view view {
    margin-right: 20rpx;
    font-size: 33rpx;
    display: inline-block;
    color: #bebebe;
}

scroll-view view:first-child {
    margin-left: 30rpx;
}

scroll-view view.active {
    font-size: 40rpx;
    color: #333;
    font-weight: bold;
}

/* goDown */

.goDown {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 0;
    border-bottom: 1rpx solid #f6f6f6;
	position: relative;
	z-index: 3;
	background-color: #fff;
}

.goDown .item {
    display: inline-block;
    width: 50%;
    text-align: center;
    font-size: 28rpx;
    color: #333;
	position: relative;
	z-index: 3;
}

.goDown .item image {
    width: 17rpx;
    height: 15rpx;
    display: inline-block;
    margin-left: 5rpx;
    margin-bottom: 2rpx;
}

.goDown .options {
	width: 100%;
	max-height: 300rpx;
	font-size: 33rpx;
	position: absolute;
	left: 0;
	top: 80rpx;
	z-index: 3;
}

.goDown .options>view {
	width: 100%;
	height: 88rpx;
	font-size: 28rpx;
	color: #6D7278;
	padding-left: 60rpx;
	box-sizing: border-box;
	background-color: #fff;
}

.goDown .options>view.active {
	background-color: #FCFCFC;
	color: #87CEFA;
}

.back {
	width: 100%;
	height: 100%;
	position: fixed;
	left: 0;
	top: 0;
	background-color: rgba(0, 0, 0, 0.6);
	z-index: 1;
}

