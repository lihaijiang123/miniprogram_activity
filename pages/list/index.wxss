.top-box {
	width: 100%;
	height: 180rpx;
	background-color: #fff;
	position: fixed;
	left: 0;
	top: 0;
	z-index: 3;
}

.ttt {
	width: 100%;
	height: 180rpx;
	margin-bottom: 20rpx;
}

/* 筛选 */

scroll-view {
    height: 100rpx;
    line-height: 100rpx;
	position: relative;
	z-index: 3;
	background-color: #fff;
}

scroll-view view {
    margin-right: 20rpx;
    font-size: 33rpx;
    display: inline-block;
    color: #bebebe;
}

scroll-view view:first-child {
    margin-left: 30rpx;
}

scroll-view view.active {
    font-size: 40rpx;
    color: #333;
    font-weight: bold;
}

/* goDown */

.goDown {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 0;
    border-bottom: 1rpx solid #f6f6f6;
	position: relative;
	z-index: 3;
	background-color: #fff;
}

.goDown .item {
    display: inline-block;
    width: 50%;
    text-align: center;
    font-size: 28rpx;
    color: #333;
	position: relative;
	z-index: 3;
}

.goDown .item image {
    width: 17rpx;
    height: 15rpx;
    display: inline-block;
    margin-left: 5rpx;
    margin-bottom: 2rpx;
}

.goDown .options {
	width: 100%;
	max-height: 300rpx;
	font-size: 33rpx;
	position: absolute;
	left: 0;
	top: 80rpx;
	z-index: 3;
}

.goDown .options>view {
	width: 100%;
	height: 88rpx;
	font-size: 28rpx;
	color: #6D7278;
	padding-left: 60rpx;
	box-sizing: border-box;
	background-color: #fff;
}

.goDown .options>view.active {
	background-color: #FCFCFC;
	color: #87CEFA;
}

.back {
	width: 100%;
	height: 100%;
	position: fixed;
	left: 0;
	top: 0;
	background-color: rgba(0, 0, 0, 0.6);
	z-index: 1;
}

/* 产品 */

.product-box {
    width: 686rpx;
    /* height: 330rpx; */
	border-radius: 10rpx;
	overflow: hidden;
    margin: 30rpx auto 0;
	padding-bottom: 30rpx;
	box-shadow: 0px 0px 16px rgba(221,227,237,1);
}

.product-box>image {
    width: 100%;
    height: 300rpx;
	display: block;
	margin-bottom: 20rpx;
	border-radius: 10rpx;
}

.product-box>view {
    width: 100%;
    height: 100%;
	position: relative;
}

.product-box>view .title {
	width: 100%;
    font-size: 36rpx;
	margin-bottom: 20rpx;
	padding: 0 20rpx;
	box-sizing: border-box;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.pro {
	width: 100%;
	padding-bottom: 60rpx;
}

.diqu {
	padding: 0 5rpx;
}

.diqu image {
	width: 60rpx;
	height: 60rpx;
	display: inline-block;
	vertical-align: middle;
}

.diqu image.time {
	width: 38rpx;
	height: 38rpx;
	margin-left: 13rpx;
	margin-right: 11rpx;
}

.diqu text {
	font-size: 30rpx;
	color: #6D7278;
}

.label {
	width: 100%;
	box-sizing: border-box;
	padding: 0 20rpx;
	height: 70rpx;
}

.label text {
	display: inline-block;
	height: 50rpx;
	line-height: 50rpx;
	border: 2rpx solid #87CEFA;
	margin-top: 20rpx;
	margin-right: 20rpx;
	font-size: 30rpx;
	color: #87CEFA;
	padding: 0 20rpx;
	border-radius: 10rpx;
}

.money {
	font-size: 40rpx;
	font-weight: bold;
	color: #87CEFA;
	position: absolute;
	right: 40rpx;
	bottom: 90rpx;
}

.no {
	text-align: center;
	font-size: 40rpx;
	font-weight: bold;
	color: #87CEFA;
	margin: 40rpx auto;
}