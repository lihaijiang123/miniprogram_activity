page {
    background-color: #ffffff;
}

.search-box {
	width: 100%;
	box-sizing: border-box;
	padding: 30rpx 0 27rpx;
	background-color: #fff;
	position: fixed;
	left: 0;
	top: 0;
	z-index: 3;
}

.tttt {
	width: 100%;
	height: 133rpx;
}

.search {
    width: 684rpx;
    height: 76rpx;
    background-color: #F6F6F6;
    border-radius: 8rpx;
    margin: 0 auto;
    position: relative;
}

.search input {
    width: 100%;
    height: 100%;
    padding-left: 76rpx;
    font-size: 28rpx;
    box-sizing: border-box;
}

.search image {
    width: 34rpx;
    height: 34rpx;
    position: absolute;
    left: 23rpx;
    top: 21rpx;
}

/* 历史记录 */
.historical {
    width: 684rpx;
	padding: 40rpx;
	box-sizing: border-box;
	position: absolute;
	left: 50%;
	top: 100rpx;
	transform: translateX(-50%);
	background-color: #fff;
	box-shadow: 0px 0px 16px rgba(221,227,237,1);
	z-index: 4;
}

.historical .t {
    margin-bottom: 30rpx;
}

.historical .t text {
    font-size: 30rpx;
    line-height: 40rpx;
    color: #2A2A2A;
    font-weight: bold;
}

.historical .t image {
    width: 31rpx;
    height: 31rpx;
}

.historical .b {
    font-size: 0;
}

.historical .b text {
    height: 52rpx;
    line-height: 52rpx;
    font-size: 24rpx;
    color: #4B4B4B;
    padding: 0 15rpx;
    background-color: #F8F8F8;
    border-radius: 26rpx;
    display: inline-block;
	margin-right: 20rpx;
}

.top-box {
	width: 100%;
	height: 180rpx;
	background-color: #fff;
	position: fixed;
	left: 0;
	top: 0;
	z-index: 3;
}

/* 筛选 */

scroll-view {
    height: 100rpx;
    line-height: 100rpx;
	position: relative;
	z-index: 3;
	background-color: #fff;
}

scroll-view view {
    margin-right: 20rpx;
    font-size: 33rpx;
    display: inline-block;
    color: #bebebe;
}

scroll-view view:first-child {
    margin-left: 30rpx;
}

scroll-view view.active {
    font-size: 40rpx;
    color: #333;
    font-weight: bold;
}

/* goDown */

.goDown {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 0;
    border-bottom: 1rpx solid #f6f6f6;
	position: relative;
	z-index: 3;
	background-color: #fff;
}

.goDown .item {
    display: inline-block;
    width: 50%;
    text-align: center;
    font-size: 28rpx;
    color: #333;
	position: relative;
	z-index: 3;
}

.goDown .item image {
    width: 17rpx;
    height: 15rpx;
    display: inline-block;
    margin-left: 5rpx;
    margin-bottom: 2rpx;
}

.goDown .options {
	width: 100%;
	max-height: 300rpx;
	font-size: 33rpx;
	position: absolute;
	left: 0;
	top: 80rpx;
	z-index: 3;
}

.goDown .options>view {
	width: 100%;
	height: 88rpx;
	font-size: 28rpx;
	color: #6D7278;
	padding-left: 60rpx;
	box-sizing: border-box;
	background-color: #fff;
}

.goDown .options>view.active {
	background-color: #FCFCFC;
	color: #87CEFA;
}

.back {
	width: 100%;
	height: 100%;
	position: fixed;
	left: 0;
	top: 0;
	background-color: rgba(0, 0, 0, 0.6);
	z-index: 1;
}

/* 产品 */

.product-box {
    width: 686rpx;
    /* height: 330rpx; */
	border-radius: 10rpx;
	overflow: hidden;
    margin: 30rpx auto 0;
	padding-bottom: 30rpx;
	box-shadow: 0px 0px 16px rgba(221,227,237,1);
}

.product-box>image {
    width: 100%;
    height: 300rpx;
	display: block;
	margin-bottom: 20rpx;
	border-radius: 10rpx;
}

.product-box>view {
    width: 100%;
    height: 100%;
	position: relative;
}

.product-box>view .title {
	width: 100%;
    font-size: 36rpx;
	margin-bottom: 20rpx;
	padding: 0 20rpx;
	box-sizing: border-box;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.diqu {
	padding: 0 5rpx;
}

.diqu image {
	width: 60rpx;
	height: 60rpx;
	display: inline-block;
	vertical-align: middle;
}

.diqu image.time {
	width: 38rpx;
	height: 38rpx;
	margin-left: 13rpx;
	margin-right: 11rpx;
}

.diqu text {
	font-size: 30rpx;
	color: #6D7278;
}

.label {
	width: 100%;
	box-sizing: border-box;
	padding: 0 20rpx;
	height: 70rpx;
}

.label text {
	display: inline-block;
	height: 50rpx;
	line-height: 50rpx;
	border: 2rpx solid #87CEFA;
	margin-top: 20rpx;
	margin-right: 20rpx;
	font-size: 30rpx;
	color: #87CEFA;
	padding: 0 20rpx;
	border-radius: 10rpx;
}

.money {
	font-size: 40rpx;
	font-weight: bold;
	color: #87CEFA;
	position: absolute;
	right: 40rpx;
	bottom: 90rpx;
}