



/* 筛选 */


/* goDown */

.goDown {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 0;
    border-bottom: 1rpx solid #f6f6f6;
	position: relative;
	z-index: 3;
	background-color: #fff;
}

.goDown .item {
    display: inline-block;
    width: 50%;
    text-align: center;
    font-size: 28rpx;
    color: #333;
	position: relative;
	z-index: 3;
}

.goDown .item image {
    width: 17rpx;
    height: 15rpx;
    display: inline-block;
    margin-left: 5rpx;
    margin-bottom: 2rpx;
}

.goDown .options {
	width: 100%;
	max-height: 300rpx;
	font-size: 33rpx;
	position: absolute;
	left: 0;
	top: 80rpx;
	z-index: 3;
}

.goDown .options>view {
	width: 100%;
	height: 88rpx;
	font-size: 28rpx;
	color: #6D7278;
	padding-left: 60rpx;
	box-sizing: border-box;
	background-color: #fff;
}

.goDown .options>view.active {
	background-color: #FCFCFC;
	color: #87CEFA;
}

.back {
	width: 100%;
	height: 100%;
	position: fixed;
	left: 0;
	top: 0;
	background-color: rgba(0, 0, 0, 0.6);
	z-index: 1;
}

/* 产品 */

.product-box {
    width: 686rpx;
    /* height: 330rpx; */
	border-radius: 10rpx;
	overflow: hidden;
    margin: 30rpx auto 0;
	box-shadow: 0px 0px 16px rgba(221,227,237,1);
  

}

.product-imgbox>image {
    width: 100%;
    height: 300rpx;
	display: block;
	border-radius: 10rpx;
}
.product-box .product-contentbox{
  padding: 0 20rpx;
}

.product-box>view .title {
	width: 100%;
    font-size: 36rpx;
	margin-bottom: 20rpx;
	box-sizing: border-box;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

