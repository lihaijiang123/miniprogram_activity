


/* 筛选 */


/* swiper */

swiper {
    width: 650rpx;
    height: 322rpx;
    display: block;
    margin: 0 auto 40rpx;
    box-shadow: 0px 4rpx 20rpx 0px rgba(191, 191, 191, 1);
}

swiper image {
    display: block;
    border-radius: 10rpx;
}

.wx-swiper-dots {
    position: relative;
    left: unset !important;
    right: 0;
}

.wx-swiper-dots.wx-swiper-dots-horizontal {
    margin-bottom: -5rpx;
}

/* 热门活动 */

.hot_activity .title {
    display: block;
    text-align: center;
    font-size: 40rpx;
    font-weight: bold;
    color: rgb(171, 171, 171);
    margin-bottom: 30rpx;
}

.hot_activity .content {
    width: 686rpx;
    margin: 0 auto;
}

.hot_activity .content .box {
    width: 333rpx;
	margin-right: 20rpx;
	margin-bottom: 30rpx;
}

.hot_activity .content .box:nth-child(2n) {
	margin-right: 0;
}

.hot_activity .content .box image {
    width: 100%;
    height: 200rpx;
    margin-bottom: 5rpx;
}

.hot_activity .content .box .title {
	padding: 0 5rpx;
    font-weight: normal;
    font-size: 28rpx;
    text-align: left;
    overflow: hidden;
    margin-bottom: 5rpx;
    display: -webkit-box;
    text-overflow: ellipsis;
    word-wrap: break-word;
    color: rgb(80, 77, 77);
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.hot_activity .content .box .subtitle {
    font-size: 27rpx;
    color: rgb(171, 171, 171);
}

.hot_activity .content .box .begin_time {
    float: right;
}

.no {
	text-align: center;
	font-size: 40rpx;
	font-weight: bold;
	color: #87CEFA;
	margin: 40rpx auto;
}
