/* pages/city/city.wxss */
.container-inner {
    display: flex;
    flex-direction: row-reverse;
}

.container {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    padding: 10rpx;
}

input {
    text-align: center;
    font-size: 32rpx;
    padding: 5px;
}

scroll-view {
    padding-left: 16rpx;
}


.selection {
    display: flex;
    width: 100%;
    flex-direction: column;
    margin-top: 10rpx;
}



.hot-city {
    display: flex;
    flex-wrap: wrap;
}

.item-letter {
    display: flex;
    background-color: #f5f5f5;
    height: 40rpx;
    padding-left: 34rpx;
    align-items: center;
    font-size: 24rpx;
    color: #666;
}

.item-city {
    display: flex;
    background-color: #fff;
    height: 100rpx;
    padding-left: 34rpx;
    align-items: center;
    border-bottom: 1rpx solid #ededed;
    font-size: 24rpx;
    color: #666;
}

.hotcity-common {
    font-size: 24rpx;
    color: #666;
    margin: 40rpx 10rpx 15rpx 8rpx;
    display: inline-block;
}


.weui-grid {
    padding: 10rpx 0;
    width: 234rpx;
    box-sizing: border-box;
    border: 1rpx solid #ececec;
    border-radius: 8rpx;
    background-color: white;
    margin: 4rpx;
}

.weui-grids {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.weui-grid-label {
    display: block;
    text-align: center;
    color: #333;
    font-size: 24rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.ul {
    display: block;
    color: grey;
    margin-left: 20rpx;
}

.li {
    display: block;
    font-weight: 100;
    font-size: 28rpx;
    padding: 16rpx 0;
}

input {
    background-color: #eee;
}

.input {
    padding: 16rpx;
    border-bottom: 1rpx solid #f1f1f1;
}

.showFlag {
	width: 100%;
	height: 100%;
	position: fixed;
	left: 0;
	top: 0;
	z-index: 999;
	background-color: rgba(0, 0, 0, 0.8);
}

.showFg {
	width: 90%;
	background-color: #fff;
	padding: 40rpx 0;
	border-radius: 10rpx;
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translateX(-50%) translateY(-50%);
	text-align: center;
}

.showg {
	font-size: 35rpx;
	line-height: 80rpx;
}

.showg text {
	color: #87CEFA;
	font-weight: bold;
}

.showFlag button {
	padding: 0;
	margin: 0;
	font-size: 35rpx;
	font-weight: normal;
	width: 200rpx;
	height: 90rpx;
	text-align: center;
	line-height: 90rpx;
	color: #333;
	margin-top: 30rpx;
	display: inline-block;
	margin-right: 40rpx !important;
}

.showFlag button:last-child {
	margin-right: 0 !important;
	background-color: #87CEFA;
	color: #fff;
}

.showFlag button:not([size='mini']) {
	width: 200rpx;
}

